app.post('/api/verify', (req, res) => {
    const { email, code } = req.body;
    
    if (!email || !code) {
        return res.status(400).json({
            success: false,
            message: 'ุงูู ู ฺฉุฏ ุชุงุฏ ุงูุฒุงู ุงุณุช'
        });
    }
    
    const verificationData = verificationCodes.get(email);
    
    if (!verificationData) {
        return res.status(400).json({ 
            success: false,
            message: 'ฺฉุฏ ุชุงุฏ ุงูุช ูุดุฏ' 
        });
    }
    
    if (Date.now() > verificationData.expires) {
        verificationCodes.delete(email);
        return res.status(400).json({ 
            success: false,
            message: 'ฺฉุฏ ุชุงุฏ ูููุถ ุดุฏู ุงุณุช' 
        });
    }
    
    if (verificationData.code !== code) {
        return res.status(400).json({ 
            success: false,
            message: 'ฺฉุฏ ุชุงุฏ ูุงูุนุชุจุฑ ุงุณุช' 
        });
    }
    
    // ฺฉุฏ ุตุญุญ ุงุณุช
    verificationCodes.delete(email);
    
    res.json({ 
        success: true,
        message: 'ุงูู ุจุง ููููุช ุชุงุฏ ุดุฏ!',
        username: verificationData.username
    });
});

app.listen(PORT, () => {
    console.log(`๐ ุณุฑูุฑ ุฏุฑ ูพูุฑุช ${PORT} ุงุฌุฑุง ุดุฏ`);
