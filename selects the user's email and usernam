function showLoading(show = true) {
    const buttons = document.querySelectorAll('.btn');
    buttons.forEach(btn => {
        btn.disabled = show;
        if (show) {
            btn.dataset.originalText = btn.textContent;
            btn.textContent = 'ุฏุฑ ุญุงู ุงุฑุณุงู...';
        } else {
            btn.textContent = btn.dataset.originalText;
        }
    });
}

