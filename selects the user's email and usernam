    });
    
    // ุงุฑุณุงู ุงูู
    try {
        await transporter.sendMail({
            from: process.env.EMAIL_USER,
            to: email,
            subject: 'ฺฉุฏ ุชุงุฏ ุซุจุช ูุงู',
            html: `
                <div style="font-family: Arial, sans-serif; text-align: center;">
                    <h2>ฺฉุฏ ุชุงุฏ ุซุจุช ูุงู</h2>
                    <p>ฺฉุงุฑุจุฑ ฺฏุฑุงู ${username},</p>
                    <p>ฺฉุฏ ุชุงุฏ ุดูุง:</p>
                    <h1 style="color: #667eea; font-size: 32px;">${verificationCode}</h1>
                    <p>ุงู ฺฉุฏ ุจู ูุฏุช ฑฐ ุฏููู ูุนุชุจุฑ ุงุณุช</p>
                </div>
            `
        });
        
        res.json({ message: 'ฺฉุฏ ุชุงุฏ ุงุฑุณุงู ุดุฏ' });
    } catch (error) {
