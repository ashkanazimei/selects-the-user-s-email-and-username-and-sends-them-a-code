// Route ุชุงุฏ ฺฉุฏ
app.post('/api/verify', (req, res) => {
    const { email, code } = req.body;
    
    const verificationData = verificationCodes.get(email);
    
    if (!verificationData) {
        return res.status(400).json({ message: 'ฺฉุฏ ุชุงุฏ ุงูุช ูุดุฏ' });
    }
    
    if (Date.now() > verificationData.expires) {
        verificationCodes.delete(email);
        return res.status(400).json({ message: 'ฺฉุฏ ุชุงุฏ ูููุถ ุดุฏู ุงุณุช' });
    }
    
    if (verificationData.code !== code) {
        return res.status(400).json({ message: 'ฺฉุฏ ุชุงุฏ ูุงูุนุชุจุฑ ุงุณุช' });
    }
    
    // ฺฉุฏ ุตุญุญ ุงุณุช
    verificationCodes.delete(email);
    
    // ุงูุฌุง ูโุชูุงูุฏ ฺฉุงุฑุจุฑ ุฑุง ุฏุฑ ุฏุชุงุจุณ ุฐุฎุฑู ฺฉูุฏ
    res.json({ message: 'ุงูู ุจุง ููููุช ุชุงุฏ ุดุฏ' });
});

app.listen(PORT, () => {
    console.log(`ุณุฑูุฑ ุฏุฑ ูพูุฑุช ${PORT} ุงุฌุฑุง ุดุฏ`);
});
